<%- include('partials/header') -%>
<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label for="titleInput">Title</label>
        <input id="titleInput" type="text" class="form-control" name="postTitle">
    </div>
    <div class="form-group">
        <label for="dataInput">Post</label>
        <textarea id="dataInput" class="form-control" rows="5" name="postData"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>
<%- include('partials/footer') -%>
